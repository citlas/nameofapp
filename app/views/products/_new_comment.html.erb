<% if signed_in? %>
	<%= form_for([@product, @product.comments.build]) do |f| %>
	<p align="center">
		<%= f.label :body, "Comments", class: "sr-only" %><br>
		<%= f.text_area :body, autofocus: true, placeholder:"Put your comments here" %>
	</p>

	<p>
		<div align="center" class="rating"></div>
	</p>
	
	<p align="center">
		<%= f.submit "Submit", class: "btn btn-success"  %>
	</p>
	<% end %>
	<% end %>